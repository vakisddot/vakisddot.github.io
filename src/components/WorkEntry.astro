---
const { entry } = Astro.props;
---
<li class="group relative flex flex-col border-2 border-orange-300/50 transition-all duration-300 hover:border-orange-300 overflow-hidden bg-black/50 backdrop-blur-md">
    <a href={`/works/${entry.slug}`}>
        <div class="w-full aspect-2/1 overflow-hidden relative">
            <img 
                src={entry.thumbnail} 
                alt={entry.title} 
                class="w-full h-full object-cover"
            />
            <div class="absolute inset-0 bg-black opacity-40 group-hover:opacity-0 transition-opacity"></div>
            {entry.github && (
                    <a 
                        href={entry.github} 
                        target="_blank" 
                        rel="noopener noreferrer"
                        class="absolute top-2 right-2 p-2 bg-black flex items-center gap-2 opacity-80 hover:opacity-100"
                        title="View Source on GitHub"
                    >
                        <i class="ph ph-github-logo"></i> GitHub Repo
                    </a>
                )}
        </div>
    </a>

    <div class="p-5 flex flex-col gap-4">
        <div class="flex justify-between items-center">
            <h3 class="text-lg md:text-xl font-bold text-orange-100 group-hover:text-orange-300 transition-colors">
                
                <a href={`/works/${entry.slug}`}>{entry.featured && (
                    <i class="ph ph-star"></i>
                )} {entry.title}</a>
                <i class="ph ph-arrow-up-right text-orange-300 opacity-0 group-hover:opacity-100 transition-opacity"></i>
            </h3>

            <a href={entry.url || `/works/${entry.slug}`} target="_blank" rel="noopener noreferrer">
                <img src={entry.icon || `/images/logo_interactive.png`} alt={entry.title + " Icon"} class="w-10 h-10 object-contain"/>
            </a>
        </div>
        <p class="text-sm opacity-80">
            {entry.description}
        </p>
    </div>
</li>